<component id="ID_title">
<text><![CDATA[<b>Transition entre les différents états OSPF</b>]]></text>
</component>

<component id="ID_txt01">
<text><![CDATA[État Down]]></text>
</component>
<component id="ID_txt02">
 <text><![CDATA[État Init]]></text> 
  </component>
<component id="ID_txt03">
  <text><![CDATA[État Two-Way]]></text> 
  </component>
