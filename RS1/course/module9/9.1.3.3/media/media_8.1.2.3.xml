<textcomponents>
<component id="ID_s1_title">
<text>
  <![CDATA[<b>Calculer le nombre de sous-réseaux</b>]]></text>
</component>

  <component id="ID_s1_txt01">
    <text>
      <![CDATA[Sous-réseaux = 2^n<br/>(où n = bits empruntés)]]>
  </text>
</component>


<component id="ID_s1_txt02">
    <text>
      <![CDATA[<font color="#f26200"><b>1</b></font> bit a été emprunté]]>
  </text>
</component>

<component id="ID_s1_txt03">
    <text>
      <![CDATA[2^<font color="#f26200"><b>1</b></font> = 2&nbsp;sous-réseaux]]>
  </text>
</component>



<component id="ID_s2_title">
    <text>
      <![CDATA[<b>Calculer le nombre d'hôtes</b>]]>
    </text>
  </component>

  <component id="ID_s2_txt01">
    <text>
      <![CDATA[Nombre d'hôtes = 2^n<br/> (où n = nombre de bits d'hôte restant)]]>
  </text>
</component>

<component id="ID_s2_txt02">
    <text>
      <![CDATA[<font color="#f26200"><b>7</b></font>&nbsp;bits restants dans le champ d'hôte]]>
    </text>
  </component>

  <component id="ID_s2_txt03">
    <text>
      <![CDATA[<textformat tabstops='[16]'>	2^<font color="#f26200"><b>7</b></font> = 128&nbsp;hôtes par sous-réseau<br>2^<font color="#f26200"><b>7</b></font> - 2 = 126&nbsp;hôtes valides par sous-réseau</textformat>]]>
    </text>
  </component>







